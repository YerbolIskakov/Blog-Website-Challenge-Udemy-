<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= startingContent %></p>

<!--Здесь запускаем цикл и выводим сообщения
Используем метод forEach вместо цикла for
слово post в качестве агрумента в анонимной функции произвольное-->
<% posts.forEach(function(post) { %>
<h1><%= post.title %></h1>
<p>
<%= post.content.substring(0, 100) + " ..." %>
<a href="/posts/<%=post.title%>">Read more</a>
</p>
<% }) %>


